<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="~/Areas/Admin/Content/style/styleLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="center">
        <h1>Đăng ký</h1>
        <form name="login" onsubmit="return insertTK()" action="@Url.Action("DangNhap")">
            <div class="txt_field">
                <input name="sdt" type="text" required>
                <span></span>
                <label>Số điện thoại</label>
            </div>
            <div class="txt_field">
                <input name="password" type="password" required>
                <span></span>
                <label>Mật khẩu</label>
            </div>
            <input type="submit" value="Đăng ký">
            <div class="signup_link">
                <a href="@Url.Action("DangNhap")">Quay lại</a>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        //Hàm lấy Thêm mới Khách hàng. Dùng $.ajax() thực hiện method HTTP POST
        function insertTK() {
            var url = 'https://localhost:44357/api/dangky?sdt=' + sdt + '&matkhau=' + mk;

            $.ajax({
                url: url,
                method: 'POST',
                contentType: 'json',
                dataType: 'json',
                error: function (response) {
                    alert("Đăng ký không thành công! Vui lòng nhập đủ thông tin!");
                },
                success: function (reponse) {
                    if (reponse == true) {
                        alert("Đăng ký thành công");
                    }
                    else {
                        alert("Đăng ký không thành công! Vui lòng nhập đủ thông tin!");
                    }
                }
            });
        }
    </script>

</body>
</html>

