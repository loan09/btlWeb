@using PagedList.Mvc;
@using PagedList;
@model IPagedList<BTL_WebBanSach05.Models.SACH>
@{
    ViewBag.Title = "ProductByNXB";
    Layout = "~/Views/Shared/_LayoutFilter.cshtml";
}

<br>
<h5">@ViewBag.Sach</h5">
<br>
<br>
<div class="row">
    @foreach (var item in Model)
    {
        @Html.Action("PreProduc", "Product", new { @MASACH = item.MASACH })
    }
</div>

<hr>
<!-- Pagination -->
<div class="w3-center w3-padding-32">
    <div class="w3-bar">
        <a href="#" class="w3-bar-item w3-button w3-hover-black">@Html.PagedListPager(Model, page => Url.Action("ProductByNXB", new { page = page, MANXB = ViewBag.MANXB }))</a>
    </div>
</div>


